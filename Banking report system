} printf("Enter account number: "); scanf("%d", &acc_no[count]); printf("Enter initial balance: "); scanf("%f", &balance [count]); count++; printf("Account created!\n");

void deposit() {

int num; float amt; printf("Enter account number: "); scanf("%d", &num); for (int i = 0; i < count; i++) { if (acc_no[i] == num) { printf("Enter amount to deposit: "); scanf("%f", &amt); balance[i] += amt; printf("Deposited successfully!\n"); return; }

} } printf("Account not found.\n");

void withdraw() {

int num; float amt; printf("Enter account number: "); scanf("%d", &num); for (int i=0; i < count; i++) { if (acc_no[i] == num) { printf("Enter amount to withdraw: "); scanf("%f", &amt); if (amt > balance[i]) { printf("Insufficient balance.\n"); } else { balance[i] -= amt; printf("Withdrawal successful!\n"); } }

return;

} printf("Account not found.\n");

